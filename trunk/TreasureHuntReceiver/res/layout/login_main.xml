<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/intro"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title" />

    <Button
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/wooden_frame"
        android:paddingLeft="10dip"
        android:text="@string/getClue"
        android:textColor="#FFFFFF"
        android:textSize="30dip" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/settings" />

    <ImageView
        android:id="@+id/parchmentImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/parchment"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/userNameBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/passwordBox"
        android:layout_alignTop="@+id/parchmentImage"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="@string/userName"
        android:singleLine="true"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/passwordBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userNameBox"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:visibility="invisible" >
    </EditText>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/settingsButton"
        android:background="@drawable/wooden_frame"
        android:paddingLeft="10dip"
        android:text="@string/cancel"
        android:textColor="#FFFFFF"
        android:textSize="30dip"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/settingsFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/settings_frame"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/settingsBackgroundImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/parchment_vertical"
        android:visibility="invisible" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordBox"
        android:layout_alignRight="@+id/userNameBox"
        android:layout_alignTop="@+id/parchmentImage"
        android:shadowColor="#FFFFFF"
        android:shadowDx="-1"
        android:shadowDy="1"
        android:shadowRadius=".01"
        android:text="@string/logout"
        android:textSize="20dip"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <Button
        android:id="@+id/rankingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordBox"
        android:layout_alignRight="@+id/userNameBox"
        android:layout_below="@+id/logoutButton"
        android:shadowColor="#FFFFFF"
        android:shadowDx="-1"
        android:shadowDy="1"
        android:shadowRadius=".01"
        android:text="@string/rankings"
        android:textSize="20dip"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <Button
        android:id="@+id/tutorialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordBox"
        android:layout_alignRight="@+id/passwordBox"
        android:layout_below="@+id/rankingsButton"
        android:shadowColor="#FFFFFF"
        android:shadowDx="-1"
        android:shadowDy="1"
        android:shadowRadius=".01"
        android:text="@string/tutorial"
        android:textSize="20dip"
        android:textStyle="bold|italic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/settingsTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/actionButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/parchment_vertical"
        android:shadowColor="#FFFFFF"
        android:shadowDx="-1"
        android:shadowDy="1"
        android:shadowRadius=".01"
        android:text="@string/settingsTextBox"
        android:textColor="#000000"
        android:textSize="20dip"
        android:textStyle="bold|italic"
        android:paddingLeft = "60dip"
        android:paddingRight = "60dip"
        android:paddingTop = "80dip"
        android:visibility="invisible" />

</RelativeLayout>